
@{
    ViewBag.Title = "Yorumyap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="contact-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="section-title">
                        <img src="assets/images/shape/title-shape-3.png" alt="">
                     
                    </div>
                    <div class="contact-box">
                        <form action="/home/Yorumyap" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="input-box mt-25">
                                        <label for="#">Yorumunuz</label>
                                        <textarea name="mesaj" id="#" cols="30" rows="10" placeholder="Yorumlarınız bizim için değerlidir"></textarea>
                                        <button type="submit" style="margin-top:50px;" class="btn btn-warning">Gönder</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="contact-thumb">
            <img src="assets/images/contact-thumb.png" alt="">
        </div>
    </section>

