
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/admin.cshtml";
}

<div class="layout-content">

    <div class="container-fluid flex-grow-1 container-p-y">
        <h4 class="font-weight-bold py-3 mb-0"></h4>

        <div class="row" style="margin-top:40px;">

            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="" style="margin:auto">

                                        <p class="text-muted mb-0"><span class="badge badge-primary" style="font-size:13px;">Toplam kategori sayısı</span></p>
                                        <h3 class="mb-2" style="text-align:center; margin-top:7px;"> @ViewBag.ToplamKategori </h3>
                                    </div>
                                    <div class="lnr lnr-leaf display-4 text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="" style="margin:auto">

                                        <p class="text-muted mb-0"><span class="badge badge-primary" style="font-size:13px;">Toplam menü sayısı</span></p>
                                        <h3 class="mb-2" style="text-align:center; margin-top:7px;"> @ViewBag.ToplamMenu </h3>
                                    </div>
                                    <div class="lnr lnr-leaf display-4 text-primary"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>


        </div>

    </div>




</div>


