
@{
    ViewBag.Title = "Menuduzenle";
    Layout = "~/Areas/admin/Views/Shared/admin.cshtml";
}

@model Menu.Models.menu

<div class="container-fluid flex-grow-1 container-p-y">

    <div class="card mb-4">
        <h6 class="card-header">Menü ekle</h6>
        <div class="card-body">
            <form method="post" action="/admin/Menu/Menuduzenle" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="form-label">Menü adı</label>
                    <input type="text" name="ad" class="form-control" value="@Model.ad">
                    <div class="clearfix"></div>
                </div>

                <div class="form-group">
                    <label class="form-label">Menü açıklaması</label>
                    <input type="text" name="aciklama" class="form-control" value="@Model.aciklama">
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <label class="form-label">Fiyat</label>
                    <input type="text" name="fiyat" class="form-control" value="@Model.fiyat">
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <label class="form-label w-100">Şuanki resim</label>
                    <img src="@Model.resim" width="100" />
                </div>
                <div class="form-group">
                    <label class="form-label w-100">Resim</label>
                    <input type="file" name="ResimURL">

                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>

</div>

