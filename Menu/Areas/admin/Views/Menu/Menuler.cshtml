
@{
    ViewBag.Title = "Menuler";
    Layout = "~/Areas/admin/Views/Shared/admin.cshtml";
}

@model  List<Menu.Models.menukategori>




<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Menü ekle</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">

    </div>
    <div class="row">

        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center m-l-0">
                        <div class="col-sm-6">
                        </div>

                    </div>
                    <div class="table-responsive">
                        <table id="report-table" class="table table-bordered table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Resim</th>
                                    <th>Kategori adı</th>
                                    <th>Menü adı</th>
                                    <th>Menü fiyatı</th>
                                    <th>Açıklama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.resim" class="img-fluid img-radius wid-40" alt="" >
                                        </td>
                                        <td>@item.kategoriadi</td>
                                        <td>@item.ad</td>
                                        <td>@item.fiyat</td>
                                        <td>@item.aciklama</td>
                                        <td width="40">
                                            <a href="/admin/menu/Menuduzenle/@item.id" class="btn btn-info btn-sm"><i class="feather icon-edit"></i>&nbsp;Düzenle </a>
                                            <a href="/admin/menu/MenuSil/@item.id" class="btn btn-danger btn-sm"><i class="feather icon-trash-2"></i>&nbsp;Sil </a>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

